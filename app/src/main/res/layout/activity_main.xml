<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <!--First Page-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/first_page"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_name"
            android:textAlignment="center"
            android:background="@color/red"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40sp"
            android:paddingBottom="40sp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="sans-serif-smallcaps"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:shadowColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:paddingTop="40sp"
            android:paddingBottom="40sp"
            android:background="@color/dark_red"
            android:paddingEnd="10sp"
            android:paddingStart="10sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:shadowDx="6"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:shadowColor="#000000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Description"
            android:padding="30sp"
            android:background="@color/red"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="sans-serif-smallcaps"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:shadowColor="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/red">
            <android.widget.Button
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/dark_red"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="beginRequest"
                android:text="@string/Begin"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10sp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>


    <!--Second Page-->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/second_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/light_black"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="@string/SearchYt"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:fontFamily="sans-serif-black"
            android:background="@color/red"
            android:gravity="center"
            android:shadowDx="8"
            android:shadowDy="4"
            android:shadowRadius="1"
            android:shadowColor="#000000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#0D000000"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/first_edit_text"
                    android:textSize="25sp"
                    android:inputType="text"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="@string/Write"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/red"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:autofillHints=""
                    android:shadowDx="2"
                    android:shadowDy="0"
                    android:shadowRadius="0.3"
                    android:shadowColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <View
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:background="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/ResultsChoice"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/white"
                    android:shadowDx="2"
                    android:shadowDy="0"
                    android:shadowRadius="0.2"
                    android:shadowColor="@color/white"/>
                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <View
                        android:layout_width="5dp"
                        android:layout_height="2dp"
                        android:background="@color/red" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:entries="@array/results"
                    android:textAlignment="center"
                    android:backgroundTint="@color/red"/>
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <android.widget.Button
            android:id="@+id/first_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/rounded_corner"
            android:fontFamily="sans-serif-black"
            android:onClick="sendRequestYoutube"
            android:text="@string/Search"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />
            <ProgressBar
                android:id="@+id/loading_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/box_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99000000"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--Third Page-->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/thirdPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/light_black"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/DownloadLinks"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:background="@color/red"
            android:gravity="center"
            android:shadowDx="8"
            android:shadowDy="4"
            android:shadowRadius="1"
            android:shadowColor="#000000" />

        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10sp"
            android:text="@string/Back"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:backgroundTint="#99000000"
            android:onClick="hidePageDownloadLink"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="50sp"
            android:textColor="#FFC857"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Video1" />

        <TextView
            android:id="@+id/first_link"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#FF0000"
            android:autoLink="web"
            android:textColorLink="@color/red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="#FFC857"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Video2" />

        <TextView
            android:id="@+id/second_link"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_margin="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#FF0000"
            android:autoLink="web"
            android:textColorLink="@color/red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="#FFC857"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Video3" />

        <TextView
            android:id="@+id/third_link"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_margin="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#FF0000"
            android:autoLink="web"
            android:textColorLink="@color/red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="#FFC857"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Video4" />
        <TextView
            android:id="@+id/fourth_link"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#FF0000"
            android:autoLink="web"
            android:textColorLink="@color/red"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingBottom="20dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/Developers"
                android:background="#33000000"
                android:shadowDx="4"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:shadowColor="#000000"
                android:layout_alignParentBottom="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/Names"
                android:shadowDx="4"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:shadowColor="#000000"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>