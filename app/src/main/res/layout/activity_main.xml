<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunset"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/first_page"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_name"
            android:background="#1A000000"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40sp"
            android:paddingBottom="40sp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily="serif"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:shadowColor="#000000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:paddingTop="40sp"
            android:paddingBottom="40sp"
            android:paddingEnd="10sp"
            android:paddingStart="10sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFC857"
            android:textSize="50sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:shadowColor="#000000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Description"
            android:padding="30sp"
            android:background="#1A000000"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily="sans-serif-smallcaps"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="#000000" />

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="32dp"
            android:backgroundTint="@color/light_green"
            android:fontFamily="sans-serif-condensed-medium"
            android:onClick="beginRequest"
            android:text="@string/Begin"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/white"/>
            <!-- android:background="@drawable/rounded_corner"-->
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/second_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/sunset"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/SearchYt"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFC857"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:background="#1A000000"
            android:gravity="center"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:shadowColor="@color/black" />

        <EditText
            android:id="@+id/first_edit_text"
            android:textSize="25sp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:hint="@string/Write"
            android:textColorHint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:layout_margin="10dp"
            android:autofillHints="" />

        <!--android:inputType="text"
             android:importantForAutofill="no"
             -->

        <Button
            android:id="@+id/first_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/light_green"
            android:fontFamily="sans-serif-black"
            android:onClick="sendRequestYoutube"
            android:shadowColor="@color/black"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="@string/Search"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/box_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3000000"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:scrollbars="vertical"
            tools:ignore="MissingConstraints">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp" />

            <Button
                android:id="@+id/button_video1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#25AC00"
                android:fontFamily="sans-serif-black"
                android:onClick="checkAndSendRequest1"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:text="@string/Download"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
