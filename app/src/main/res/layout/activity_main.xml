<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunset"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/first_page"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_name"
            android:background="#1A000000"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40sp"
            android:paddingBottom="40sp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily="serif"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:shadowColor="#000000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:paddingTop="40sp"
            android:paddingBottom="40sp"
            android:paddingEnd="10sp"
            android:paddingStart="10sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFC857"
            android:textSize="50sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:shadowColor="#000000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Description"
            android:padding="30sp"
            android:background="#1A000000"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily="sans-serif-smallcaps"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="#000000" />

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="32dp"
            android:backgroundTint="@color/light_green"
            android:fontFamily="sans-serif-condensed-medium"
            android:onClick="beginRequest"
            android:text="@string/Begin"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/second_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/sunset"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/SearchYt"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFC857"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:background="#1A000000"
            android:gravity="center"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:shadowColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/first_edit_text"
                android:textSize="25sp"
                android:inputType="text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:hint="@string/Write"
                android:textColorHint="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/white"
                android:autofillHints="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:text="@string/ResultsChoice"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="9dp"
                android:entries="@array/results"
                android:textAlignment="center"
                android:backgroundTint="@color/light_green"
                android:background="@color/white"/>


    </LinearLayout>

    <!--
        <RadioGroup
            android:id="@+id/radio_group_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"/>
        </RadioGroup>
        -->





        <Button
            android:id="@+id/first_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/light_green"
            android:fontFamily="sans-serif-black"
            android:onClick="sendRequestYoutube"
            android:shadowColor="@color/black"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="@string/Search"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/box_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B3000000"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/thirdPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/sunset"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/DownloadLinks"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFC857"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:background="#1A000000"
            android:gravity="center"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:shadowColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10sp"
            android:text="@string/Back"
            android:textSize="16sp"
            android:backgroundTint="#33000000"
            android:onClick="hidePageDownloadLink"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="50sp"
            android:textColor="#FFC857"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="type: video/mp4 quality: 360p" />

        <TextView
            android:id="@+id/first_link"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#FF0000"
            android:autoLink="web"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="#FFC857"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="type: video/mp4 quality: 720p" />

        <TextView
            android:id="@+id/second_link"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#FF0000"
            android:autoLink="web"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="#FFC857"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="type: audio/mp4 quality: high" />

        <TextView
            android:id="@+id/third_link"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#FF0000"
            android:autoLink="web"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="#FFC857"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="type: audio/webm quality: high" />
        <TextView
            android:id="@+id/fourth_link"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#FF0000"
            android:autoLink="web"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center|bottom"
            android:text="Developers"
            android:background="#33000000"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:shadowColor="#000000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_gravity="center|bottom"
            android:background="#33000000"
            android:text="Dario Caramiello - Simone Lanza"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:shadowColor="#000000"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>