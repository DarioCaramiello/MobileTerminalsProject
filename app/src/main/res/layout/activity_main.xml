<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <!--First Page-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/first_page"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="80sp"
            android:paddingBottom="80sp"
            android:src="@drawable/logo" />

        <android.widget.Button
            android:layout_width="310sp"
            android:layout_height="55sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/opensans_semibold"
            android:letterSpacing=".3"
            android:onClick="fromFirstToSecondPage"
            android:text="@string/Begin"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="40sp">
            <View
                android:layout_width="260sp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#A9A9A9" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Description"
            android:textAlignment="center"
            android:textColor="#404040"
            android:textSize="20sp"
            android:fontFamily="@font/opensans_medium"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/white" />
    </LinearLayout>


    <!--Second Page-->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/second_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="@string/SearchYt"
            android:textFontWeight="800"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#D02025"
            android:textSize="30sp"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="#A9A9A9" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false"
            android:paddingTop="25sp"
            android:paddingBottom="25sp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/first_edit_text"
                    android:textSize="25sp"
                    android:inputType="text"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="@string/Write"
                    android:textColorHint="@color/black"
                    android:backgroundTint="#A9a9a9"
                    android:fontFamily="@font/opensans_light"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/dark_red"
                    android:autofillHints="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <View
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:background="#A9A9A9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/ResultsChoice"
                    android:fontFamily="@font/opensans_light"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="7sp"
                    android:layout_marginTop="2sp"
                    android:entries="@array/results"
                    android:textAlignment="center"
                    android:backgroundTint="@color/black"/>
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <android.widget.Button
            android:id="@+id/first_button"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_marginStart="60sp"
            android:textAlignment="center"
            android:gravity="center"
            android:letterSpacing=".1"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/opensans_medium"
            android:textFontWeight="600"
            android:onClick="sendRequestYoutube"
            android:text="@string/Search"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />
            <ProgressBar
                android:id="@+id/loading_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#1A000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/box_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--Third Page-->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/thirdPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/DownloadLinks"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#D02025"
            android:textSize="40sp"
            android:fontFamily="@font/opensans_bold"
            android:textFontWeight="900"
            android:gravity="center"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:shadowColor="#000000" />

        <android.widget.Button
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/opensans_medium"
            android:textFontWeight="600"
            android:letterSpacing=".1"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10sp"
            android:text="@string/Back"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="hidePageDownloadLink"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15sp">
            <View
                android:layout_width="200sp"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="#a9a9a9" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/opensans_light"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Video1" />

        <TextView
            android:id="@+id/first_link"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/defaultLink"
            android:singleLine="true"
            android:autoLink="web"
            android:textColorLink="@color/light_green" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="10sp">
            <View
                android:layout_width="200sp"
                android:layout_height="1dp"
                android:layout_gravity="start"
                android:background="#a9a9a9" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:fontFamily="@font/opensans_light"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Video2" />

        <TextView
            android:id="@+id/second_link"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/defaultLink"
            android:singleLine="true"
            android:autoLink="web"
            android:textColorLink="@color/light_green" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="10sp">
            <View
                android:layout_width="200sp"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="#a9a9a9" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:fontFamily="@font/opensans_light"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Video3" />

        <TextView
            android:id="@+id/third_link"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/defaultLink"
            android:singleLine="true"
            android:autoLink="web"
            android:textColorLink="@color/light_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="10sp">
            <View
                android:layout_width="200sp"
                android:layout_height="1dp"
                android:layout_gravity="start"
                android:background="#a9a9a9" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:fontFamily="@font/opensans_light"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Video4" />
        <TextView
            android:id="@+id/fourth_link"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/defaultLink"
            android:singleLine="true"
            android:autoLink="web"
            android:textColorLink="@color/light_green" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingBottom="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/opensans_light"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/Developers"
                android:layout_alignParentBottom="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/opensans_light"
                android:textSize="15sp"
                android:text="@string/Names"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>